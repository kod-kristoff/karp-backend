{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spraakbanken.gu.se/resourceconf.schema.json",
  "title": "Resource configuration",
  "description": "",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "resource_id": {
      "description": "The unique identifier for a resource",
      "type": "string"
    },
    "resource_name": {
      "description": "The name of the resource",
      "type": "string"
    },
    "fields": {
      "description": "The fields of the resource",
      "type": "object",
      "patternProperties": {
        "^.*$":  {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "type": "string" },
            "required": { "type": "boolean" },
            "collection": { "type": "boolean" },
            "properties": { "$ref": "#/properties/fields" },
            "ref": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "resource_id": { "type": "string" },
                "properties": { "$ref": "#/properties/fields" }
              },
              "required": ["resource_id"]
            }
          },
          "required": ["type"]
        }
      }
    },
    "sort": {
      "description": "Default sorting order for the resource",
      "type": "string"
    },
    "protected": {
      "description": "Settings for the permissions of the lexica",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "write": {
          "type": "boolean"
        },
        "read": {
          "type": "boolean"
        }
      }
    },
    "id": {
      "type": "string"
    }
  },
  "required": ["resource_id", "resource_name", "fields", "sort"]
}
