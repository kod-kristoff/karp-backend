{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://spraakbanken.gu.se/resourceconf.schema.json",
  "title": "Resource configuration",
  "description": "",
  "definitions": {
    "aField": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "required": { "type": "boolean" },
        "collection": { "type": "boolean" },
        "fields": { "$ref": "#/properties/fields" },
        "ref": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "resource_id": { "type": "string" },
            "field": { "$ref": "#/definitions/aField" }
          }
        },
        "virtual": { "type": "boolean" },
        "function": { "$ref": "#/definitions/function" }
      },
      "required": ["type"]
    },
    "function": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "multi_ref": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "field": { "type": "string" },
            "result": { "$ref": "#/definitions/aField" },
            "test": { "type": "object" }
          }
        }
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "resource_id": {
      "description": "The unique identifier for a resource",
      "type": "string"
    },
    "resource_name": {
      "description": "The name of the resource",
      "type": "string"
    },
    "fields": {
      "description": "The fields of the resource",
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "$ref": "#/definitions/aField"
        }
      }
    },
    "sort": {
      "description": "Default sorting order for the resource",
      "type": "string"
    },
    "protected": {
      "description": "Settings for the permissions of the lexica",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "write": {
          "type": "boolean"
        },
        "read": {
          "type": "boolean"
        }
      }
    },
    "referenceable": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "id": {
      "type": "string"
    }
  },
  "required": ["resource_id", "resource_name", "fields", "sort"]
}
